<!--pages/upload/upload.wxml-->
<cu-custom bgColor="bg-gradual-blue" >	<view slot="content">上传</view>
</cu-custom>
<form>
	<view class="cu-form-group margin-top">
		<view class="title">文件名</view>
		<input placeholder="请输入文件名"></input>
	</view>
	<view class="cu-form-group ">
		<view class="title">文件类型</view>
		<picker bindchange="PickerChangeType" value="{{index}}" range="{{pickerType}}">
			<view class="picker">
				{{index?pickerType[index]:'请选择文件类型'}}
			</view>
		</picker>
	</view>
	

  <view class="cu-form-group margin-top">
		<view class="title">学院</view>
		<picker bindchange="PickerChangeCollege" value="{{index1}}" range="{{pickerCollege}}">
			<view class="picker">
				{{index1?pickerCollege[index1]:'请选择学院'}}
			</view>
		</picker>
	</view>
  <view class="cu-form-group ">
		<view class="title">年级</view>
		<picker bindchange="PickerChangeGrade" value="{{index2}}" range="{{pickerGrade}}">
			<view class="picker">
				{{index2?pickerGrade[index2]:'请选择年级'}}
			</view>
		</picker>
	</view>
  <view class="cu-form-group">
		<view class="title">课程</view>
		<input placeholder="请输入课程名"></input>
	</view>


  <view class="cu-bar margin-top bg-white">
  <view class="action">
    <text class="cuIcon-title text-blue"></text>文件上传
  </view>



<view class="padding-sl">
  <button class="cu-btn block bg-blue margin-tb-sm lg" bindtap="ChooseFile">
    <text class="cuIcon-upload"></text> 点击上传文件</button>
</view>
</view>
<view class="padding flex flex-direction">
<button class="cu-btn bg-red margin-tb-sm lg">确人上传</button>
</view>
			



</form>

